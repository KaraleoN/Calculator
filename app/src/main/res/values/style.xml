<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <!-- Style for the result TextView -->
    <style name="TextViewResultStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginBottom">70dp</item>
    </style>

    <!-- Style for the Calculator Button -->
    <style name="CalculatorButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_below">@id/textViewResult</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Style for Clear Button -->
    <style name="ClearButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">#D1D1D1</item>
    </style>

    <!-- Style for Operation Buttons -->
    <style name="OperationButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:background">#FFA500</item>
    </style>

    <!-- Style for Number Buttons -->
    <style name="NumberButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:background">#E0E0E0</item>
    </style>

</resources>